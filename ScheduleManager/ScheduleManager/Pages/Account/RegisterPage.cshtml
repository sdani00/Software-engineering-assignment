@page "/register"
@using ScheduleManager.Status
@model ScheduleManager.Pages.Account.RegisterPageModel
@{
    ViewData["page-title"] = "Register";

    ViewData["create-an-account"] = "Create an Account";
    ViewData["confirmation-message"] = "Registration sent. Please check tour inbox to activate the account.";
    ViewData["rejection-message"] = "Registration was not sent!";
    ViewData["firstname-placeholder"] = "First Name";
    ViewData["lastname-placeholder"] = "Last Name";
    ViewData["email-placeholder"] = "Email";
    ViewData["password-placeholder"] = "Password";
    ViewData["confirm-password-placeholder"] = "Confirm password";
    ViewData["register-button"] = "Register Account";

    ViewData["already-registered"] = "Already have an account? Please, login.";
}


<div class="container">
    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">

            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-5 d-none d-lg-block bg-register-image" style="background-image: url(@ViewData["registration-image-url"])"></div>
                <div class="col-lg-7">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">@ViewData["create-an-account"]</h1>
                        </div>
                        <form class="user" method="post">
                            <div class="form-group row">
                                @if (Model.RequestStatus == Status.Rejected)
                                {
                                    <div class="alert alert-danger" role="alert">@ViewData["rejection-message"]</div>
                                }
                                @if (Model.RequestStatus == Status.Error)
                                {
                                    <div class="alert alert-danger" role="alert">@ViewData["error-message"]</div>
                                }
                                <span asp-validation-for="RegisterModel" class="text-danger" style="white-space:pre-line"></span>
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input type="text" class="form-control form-control-user" asp-for="RegisterModel.FirstName"
                                           placeholder=@ViewData["firstname-placeholder"]>
                                    <span asp-validation-for="RegisterModel.FirstName" class="text-danger"></span>
                                </div>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control form-control-user" asp-for="RegisterModel.LastName"
                                           placeholder=@ViewData["lastname-placeholder"]>
                                    <span asp-validation-for="RegisterModel.LastName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <input type="email" class="form-control form-control-user" asp-for="RegisterModel.Email"
                                       placeholder=@ViewData["email-placeholder"]>
                                <span asp-validation-for="RegisterModel.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input type="password" class="form-control form-control-user"
                                           asp-for="RegisterModel.Password" placeholder=@ViewData["password-placeholder"]>
                                    <span asp-validation-for="RegisterModel.Password" class="text-danger"></span>
                                </div>
                                <div class="col-sm-6">
                                    <input type="password" class="form-control form-control-user"
                                           asp-for="RegisterModel.ConfirmationPassword" placeholder=@ViewData["confirm-password-placeholder"]>
                                    <span asp-validation-for="RegisterModel.ConfirmationPassword" class="text-danger"></span>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary btn-user btn-block">
                                @ViewData["register-button"]
                            </button>
                        </form>
                        <hr>
                        <div class="text-center">
                            <a class="small" asp-page="/Account/Login">@ViewData["already-registered"]</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
